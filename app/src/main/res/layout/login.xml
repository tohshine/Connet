<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroud_login"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:gravity="center"
        android:hint="email"
        android:singleLine="true"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:textColor="#2e2c2c"
        android:id="@+id/user_email"
        android:layout_width="265dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="243dp"
        android:background="@drawable/background_username" />

    <EditText
        android:id="@+id/user_pass"
        android:singleLine="true"
        android:maxLines="1"
        android:inputType="textPassword"
        android:hint="password"
        android:paddingBottom="5dp"
        android:textColor="#2e2c2c"
        android:layout_width="265dp"
        android:layout_height="48dp"
        android:fitsSystemWindows="true"
        android:layout_alignStart="@+id/user_email"
        android:layout_alignTop="@+id/user_email"
        android:layout_marginTop="59dp"
        android:gravity="center"
        android:background="@drawable/background_password" />

    <Button
        android:id="@+id/signIn"
        android:text="login"
        android:textAllCaps="false"
        android:paddingBottom="5dp"
        android:textColor="#fcfafa"
        android:gravity="center"
        android:layout_width="161dp"
        android:fitsSystemWindows="true"
        android:layout_height="41dp"
        android:layout_below="@+id/user_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/background_login" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffff"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/signIn"
        android:layout_marginTop="19dp"
        android:id="@+id/view" />

    <Button
        android:id="@+id/gotoSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view"
        android:layout_marginTop="11dp"
        android:background="#00000000"
        android:text="already a new member? sign up."
        android:textColor="#ffff"
        android:textAllCaps="false"
        android:textSize="10dp"/>

</RelativeLayout>
